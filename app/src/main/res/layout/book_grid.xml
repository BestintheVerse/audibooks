

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:autofit="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/tools"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp"
        >


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cv_grid"
            card_view:cardUseCompatPadding="true"
            android:foreground="?android:attr/selectableItemBackground"
            >

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:scaleType="fitXY"
                    android:id="@+id/book_cover_grid"

                    />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/book_title_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/book_cover_grid"
                    android:textSize="17sp"
                    autofit:minTextSize="8sp"
                    android:maxLines="2"
                    android:paddingTop="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="10dp"
                    />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/book_author_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/book_title_grid"
                    android:textSize="16sp"
                    autofit:minTextSize="8sp"
                    android:maxLines="1"
                    android:singleLine = "true"
                    android:textColor="@color/text_secondary"
                    android:paddingStart="5dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="2dp"

                    />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="0dp"
                    android:layout_gravity="center"
                    android:src="@drawable/time_icon"
                    android:tint="@color/text_secondary"
                    android:layout_below="@+id/book_author_grid"
                    android:id="@+id/time_icon_grid"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_time_label_grid"
                    android:paddingStart="3dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="2dp"
                    android:layout_gravity="center"
                    android:layout_below="@+id/book_author_grid"
                    android:layout_toEndOf="@+id/time_icon_grid"
                    android:textColor="@color/text_secondary"
                    android:textSize="15sp"
                    android:text="20 hours"
                    />





            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
