
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"

    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:backgroundTint="#fff"
    sothree:umanoDragView="@+id/title_author_container"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookView"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:padding="8dp"
            android:clipToPadding="false"
            android:scrollbarStyle="outsideOverlay"
            android:drawSelectorOnTop="true"/>
        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bookViewGrid"
            android:numColumns="2"
            android:verticalSpacing="0dp"
            android:horizontalSpacing="0dp"
            android:padding="8dp"
            android:clipToPadding="false"
            android:scrollbarStyle="outsideOverlay"
            android:stretchMode="columnWidth"
            android:gravity="center"
            android:drawSelectorOnTop="true"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:id="@+id/slidingUpDrawer"
        android:clickable="true"
        android:background="@color/primary_dark">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_cover_blur"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"

            />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/expand_less_button"
            android:tint="#fff"
            android:id="@+id/expand_button_view"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_author_container">

            <me.grantland.widget.AutofitTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#fff"
                android:id="@+id/Book_Title_View"
                android:textSize="20sp"
                autofit:minTextSize="10sp"
                android:maxLines="1"
                android:singleLine = "true"
                android:paddingTop="5dp"
                android:paddingStart="35dp"
                android:paddingEnd="35dp"
                android:gravity="center_horizontal"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/Book_Author_View"
                android:textColor="@color/text_secondary"
                android:gravity="center_horizontal"
                android:layout_below="@+id/Book_Title_View"
                android:paddingTop="1dp"
                android:paddingBottom="5dp"
                android:textSize="17sp"
                />

        </RelativeLayout>

        <com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:porterduffxfermode="DST_IN"
            app:mask="@drawable/masking_masking_01"
            android:layout_alignEnd="@id/title_author_container"
            android:layout_gravity="center">

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:mrl_rippleDuration="250"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleColor="#ffffff"
                android:id="@+id/close_book_button"
                android:layout_gravity="center"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/close_book"
                    android:layout_gravity="center"
                    />
            </com.balysv.materialripple.MaterialRippleLayout>
        </com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_secondary"
            android:id="@+id/Chapter_View"
            android:layout_below="@+id/title_author_container"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            />





        <ImageView
            android:layout_width="255dp"
            android:layout_height="340dp"
            android:id="@+id/main_cover"
            android:layout_below="@+id/Chapter_View"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:id="@+id/controlLayout"
            android:layout_below="@+id/main_cover">

            <com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout
                android:layout_width="50dp"
                app:porterduffxfermode="DST_IN"
                app:mask="@drawable/masking_masking_01"
                android:layout_height="50dp"
                android:layout_gravity="center">
                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:mrl_rippleDuration="250"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleColor="#ffffff"
                    android:id="@+id/back"
                    android:layout_gravity="center"
                    >
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#fff"
                        android:background="@drawable/back"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_gravity="center"

                        />
                </com.balysv.materialripple.MaterialRippleLayout>
            </com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1" />

            <com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout
                android:layout_width="50dp"
                app:porterduffxfermode="DST_IN"
                app:mask="@drawable/masking_masking_01"
                android:layout_height="50dp"
                android:layout_gravity="center">
                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:mrl_rippleDuration="250"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleColor="#ffffff"
                    android:id="@+id/replay_30"
                    android:layout_gravity="center">
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#fff"
                        android:background="@drawable/replay_30"
                        android:layout_gravity="center"
                        />
                </com.balysv.materialripple.MaterialRippleLayout>
            </com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1" />

            <com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout
                android:layout_width="50dp"
                app:porterduffxfermode="DST_IN"
                app:mask="@drawable/masking_masking_01"
                android:layout_height="50dp"
                android:layout_gravity="center">
                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:mrl_rippleDuration="250"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleColor="#ffffff"
                    android:id="@+id/replay_10"
                    android:layout_gravity="center">
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#fff"
                        android:background="@drawable/replay_10"
                        android:layout_gravity="center"
                        />
                </com.balysv.materialripple.MaterialRippleLayout>
            </com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1" />

            <com.wnafee.vector.MorphButton
                android:id="@+id/playPauseButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:vc_foregroundTint="#ffffff"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                app:vc_startDrawable="@drawable/ic_pause_to_play"
                app:vc_endDrawable="@drawable/ic_play_to_pause"
                />




            <View
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1" />

            <com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout
                android:layout_width="50dp"
                app:porterduffxfermode="DST_IN"
                app:mask="@drawable/masking_masking_01"
                android:layout_height="50dp"
                android:layout_gravity="center">
                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:mrl_rippleDuration="250"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleColor="#ffffff"
                    android:id="@+id/forward_10"
                    android:layout_gravity="center">
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#fff"
                        android:background="@drawable/forward_10"
                        android:layout_gravity="center"
                        />
                </com.balysv.materialripple.MaterialRippleLayout>
            </com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_gravity="center"/>

            <com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout
                android:layout_width="50dp"
                app:porterduffxfermode="DST_IN"
                app:mask="@drawable/masking_masking_01"
                android:layout_height="50dp"
                android:layout_gravity="center">
                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:mrl_rippleDuration="250"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleColor="#ffffff"
                    android:id="@+id/forward_30"
                    android:layout_gravity="center">
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#fff"
                        android:background="@drawable/forward_30"
                        android:layout_gravity="center"
                        />
                </com.balysv.materialripple.MaterialRippleLayout>
            </com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout
                android:layout_width="50dp"
                app:porterduffxfermode="DST_IN"
                app:mask="@drawable/masking_masking_01"
                android:layout_height="50dp"
                android:layout_gravity="center">
                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:mrl_rippleDuration="250"
                    app:mrl_rippleDelayClick="false"
                    app:mrl_rippleColor="#ffffff"
                    android:id="@+id/next"
                    android:layout_gravity="center">
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#fff"
                        android:background="@drawable/next"
                        android:layout_gravity="center"
                        />
                </com.balysv.materialripple.MaterialRippleLayout>
            </com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout>


        </LinearLayout>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumbTint="#fff"
            android:progressTint="#fff"
            android:layout_below="@+id/controlLayout"
            android:id="@+id/seekBar"
            android:paddingTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeLeft"
            android:text=""
            android:textColor="@color/text_secondary"
            android:layout_below="@id/seekBar"
            android:layout_alignParentEnd="true"
            android:paddingTop="0dp"
            android:paddingEnd="13dp"
            android:paddingStart="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeElapsed"
            android:text=""
            android:textColor="@color/text_secondary"
            android:layout_below="@id/seekBar"
            android:layout_alignParentStart="true"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingStart="13dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/percentElapsedOne"
            android:text=""
            android:textColor="@color/text_secondary"
            android:layout_below="@id/seekBar"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_below="@+id/timeElapsed"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:progressTint="#fff"
            android:max="100"
            android:indeterminate="false"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalDuration"
            android:text=""
            android:textColor="@color/text_secondary"
            android:layout_below="@id/progressBar"
            android:layout_alignParentStart="true"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingStart="13dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/percentElapsed"
            android:text=""
            android:textColor="@color/text_secondary"
            android:layout_below="@id/progressBar"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/durationLeft"
            android:text=""
            android:textColor="@color/text_secondary"
            android:layout_below="@id/progressBar"
            android:layout_alignParentEnd="true"
            android:paddingTop="0dp"
            android:paddingEnd="13dp"
            android:paddingStart="0dp"/>





    </RelativeLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>






